@model Labb3_InformationSystem.Models.Employee

@{
    ViewData["Title"] = "Detaljer för Anställd";
}

<h2>Detaljer för Anställd</h2>

<div class="details-container">
    <div class="form-group">
        <label>Namn:</label>
        <p>@Model.Name</p>
    </div>

    <div class="form-group">
        <label>Email:</label>
        <p>@Model.Email</p>
    </div>

    <div class="form-group">
        <label>Roll:</label>
        <p>@Model.Role</p>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-warning">Redigera</a>
    <a asp-action="Delete" asp-route-id="@Model.EmployeeID" class="btn btn-danger">Ta bort</a>
    <a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
</div>