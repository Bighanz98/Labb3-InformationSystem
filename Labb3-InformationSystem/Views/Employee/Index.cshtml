@model IEnumerable<Labb3_InformationSystem.Models.Employee>

@{
    ViewData["Title"] = "Alla Anställda";

    Layout = "_Layout";
}

<h2>Anställda</h2>

<div class="search-filter">
    <form asp-action="Index" method="get">
        <div class="form-group">
            <label for="searchName">Sök efter namn:</label>
            <input type="text" name="searchName" id="searchName" class="form-control" placeholder="Ange namn" value="@ViewData["SearchName"]" />
        </div>
        <button type="submit" class="btn btn-primary">Filtrera</button>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)

        {
            <tr>
                <td>@employee.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.EmployeeID" class="btn btn-info">
                        <i class="fas fa-info-circle" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID" class="btn btn-warning">
                        <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeID" class="btn btn-danger">
                        <i class="fas fa-trash-alt" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-success">Lägg till ny anställd</a>
</div>