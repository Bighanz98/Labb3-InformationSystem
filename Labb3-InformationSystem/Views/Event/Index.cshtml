@model IEnumerable<Labb3_InformationSystem.Models.Event>

@{
    ViewData["Title"] = "Händelser";

    Layout = "_Layout";
}

<h2>Händelser</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Beskrivning</th>
            <th>Förare</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)

        {
            <tr>
                <td>@eventItem.EventDate.ToString("dd/MM/yyyy")</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.Driver.DriverName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@eventItem.EventID" class="btn btn-info">
                        <i class="fas fa-info-circle" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@eventItem.EventID" class="btn btn-warning">
                        <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@eventItem.EventID" class="btn btn-danger">
                        <i class="fas fa-trash-alt" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Event" asp-action="Create" class="btn btn-success">Lägg till händelse</a>
</div>