@model Labb3_InformationSystem.Models.Event

@{
    ViewData["Title"] = "Ta bort händelse";
}

<h2>Ta bort händelse</h2>

<h4>Är du säker på att du vill ta bort denna händelse?</h4>
<div>
    <h5>@Model.Description</h5>
    <p><strong>Datum:</strong> @Model.EventDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Förare:</strong> @Model.Driver.DriverName</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EventID" />
    <button type="submit" class="btn btn-danger">Ta bort</button>
    <a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
</form>