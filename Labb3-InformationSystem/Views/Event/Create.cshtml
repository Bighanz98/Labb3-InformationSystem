@model Labb3_InformationSystem.Models.Event

@{
    ViewData["Title"] = "Skapa händelse";
}

<h2>Skapa händelse</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" class="form-control" type="date" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DriverID"></label>
        <select asp-for="DriverID" class="form-control" asp-items="@(new SelectList(ViewBag.Drivers, "DriverID", "DriverName"))"></select>
        <span asp-validation-for="DriverID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spara</button>
    <a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
</form>