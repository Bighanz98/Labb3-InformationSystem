@model IEnumerable<Labb3_InformationSystem.Models.Driver>

@{
    ViewData["Title"] = "Alla Förare";

    Layout = "_Layout";
}

<h2>Förare</h2>

<div class="search-filter">
    <form asp-action="Index" method="get">
        <div class="form-group">
            <label for="searchName">Sök efter namn:</label>
            <input type="text" name="searchName" id="searchName" class="form-control" placeholder="Ange förarnamn" value="@ViewData["SearchName"]" />
        </div>
        <div class="form-group">
            <label for="startDate">Från:</label>
            <input type="date" name="startDate" id="startDate" class="form-control" value="@ViewData["StartDate"]" />
        </div>
        <div class="form-group">
            <label for="endDate">Till:</label>
            <input type="date" name="endDate" id="endDate" class="form-control" value="@ViewData["EndDate"]" />
        </div>
        <button type="submit" class="btn btn-primary">Filtrera</button>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Registreringsnummer</th>
            <th>Ansvarig Medarbetare</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var driver in Model)

        {
            <tr>
                <td>@driver.DriverName</td>
                <td>@driver.CarReg</td>
                <td>@driver.ResponsibleEmployee</td>
                <td>
                    <a asp-action="Details" asp-route-id="@driver.DriverID" class="btn btn-info">
                        <i class="fas fa-info-circle" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@driver.DriverID" class="btn btn-warning">
                        <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@driver.DriverID" class="btn btn-danger">
                        <i class="fas fa-trash-alt" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-success">Lägg till ny förare</a>
</div>